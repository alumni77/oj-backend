<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjedu.passport.mapper.UserInfoMapper">

    <insert id="addUser" parameterType="com.zjedu.pojo.dto.RegisterDTO">
        insert into user_info(uuid, username, password)
        values (#{uuid}, #{username}, #{password})
    </insert>

    <select id="getSuperAdminUidList" resultType="java.lang.String" useCache="true">
        select ur.uid
        from user_role ur
        where ur.role_id = 1000
    </select>

</mapper>