<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjedu.passport.mapper.UserRoleMapper">
    <resultMap id="map_UserRoles" type="com.zjedu.pojo.vo.UserRolesVO">
        <id column="uuid" property="uid"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="nickname" property="nickname"/>
        <result column="school" property="school"/>
        <result column="course" property="course"/>
        <result column="number" property="number"/>
        <result column="gender" property="gender"/>
        <result column="realname" property="realname"/>
        <result column="cf_username" property="cfUsername"/>
        <result column="github" property="github"/>
        <result column="blog" property="blog"/>
        <result column="email" property="email"/>
        <result column="signature" property="signature"/>
        <result column="title_name" property="titleName"/>
        <result column="title_color" property="titleColor"/>
        <result column="status" property="status"/>
        <result column="avatar" property="avatar"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
        <collection property="roles" ofType="com.zjedu.pojo.entity.user.Role">
            <id column="role_id" property="id"/>
            <result column="role" property="role"/>
            <result column="description" property="description"/>
            <result column="role_status" property="status"/>
            <result column="role_gmt_create" property="gmtCreate"/>
            <result column="role_gmt_modified" property="gmtModified"/>
        </collection>
    </resultMap>

    <select id="getUserRoles" resultMap="map_UserRoles">
        SELECT r.id as role_id,r.role as role,r.description as description,r.status as role_status, r.gmt_create as
        role_gmt_create,
        r.gmt_modified as role_gmt_modified,
        u.* FROM user_info u
        LEFT OUTER JOIN user_role ur ON u.uuid=ur.uid LEFT JOIN role r ON ur.role_id = r.id
        <where>
            <if test="uid != null and uid != ''">
                u.uuid = #{uid}
            </if>
            <if test="username != null and username != ''">
                and u.username = #{username}
            </if>
        </where>
    </select>
</mapper>